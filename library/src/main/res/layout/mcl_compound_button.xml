<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="104dp"
    android:layout_height="96dp"
    android:gravity="center">

    <net.soulwolf.widget.materialradio.widget.MaterialStateButton
        android:id="@+id/mci_compound_button_image"
        android:layout_width="104dp"
        android:layout_height="96dp"
        android:clickable="true" />

    <View
        android:id="@+id/mci_compound_button_padding"
        android:layout_width="3dp"
        android:layout_height="0dp" />

    <net.soulwolf.widget.materialradio.widget.MaterialStateText
        android:id="@+id/mci_compound_button_text"
        fontPath="fonts/FrutigerLTArabic-55Roman.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>